# ==================== DATABASE CONFIGURATION ====================
# PostgreSQL Database Connection
DATABASE_URL=postgresql://clinical_user:your_password@localhost:5432/clinical_db

# Database Connection Details (used for manual connections)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=clinical_db
DB_USER=clinical_user
DB_PASSWORD=your_password

# ==================== JWT AUTHENTICATION ====================
# Secret key for JWT token generation (CHANGE THIS IN PRODUCTION!)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-here-change-in-production-minimum-32-characters
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ==================== APPLICATION SETTINGS ====================
# API Configuration
API_V1_STR=/api/v1
PROJECT_NAME=Clinical Conversation Summarization System
DEBUG=False
ENVIRONMENT=development

# Server Configuration
HOST=0.0.0.0
PORT=8000

# ==================== AI MODELS CONFIGURATION ====================
# OpenAI Whisper Speech Recognition Model
# Options: tiny, base, small, medium, large
WHISPER_MODEL_NAME=base
# Set to 'cuda' if you have a GPU, otherwise 'cpu'
WHISPER_DEVICE=cpu

# HuggingFace Summarization Model
SUMMARIZATION_MODEL=facebook/bart-large-cnn
# Alternative lighter models:
# SUMMARIZATION_MODEL=sshleifer/distilbart-cnn-12-6
# SUMMARIZATION_MODEL=facebook/bart-large-xsum

# spaCy NLP Model
ENTITY_EXTRACTION_MODEL=en_core_sci_sm

# Sentence Transformer for Retrieval
RETRIEVAL_MODEL=all-MiniLM-L6-v2
# Alternative models:
# RETRIEVAL_MODEL=sentence-transformers/all-mpnet-base-v2

# ==================== FILE UPLOAD SETTINGS ====================
# Maximum file upload size (in bytes)
MAX_UPLOAD_SIZE=52428800  # 50MB
UPLOAD_DIR=./uploads

# Allowed audio formats
ALLOWED_AUDIO_FORMATS=wav,mp3,m4a,flac,ogg

# ==================== LOGGING CONFIGURATION ====================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log
LOG_MAX_SIZE=10485760  # 10MB
LOG_BACKUP_COUNT=5

# ==================== CORS SETTINGS ====================
# Allowed origins for CORS (comma-separated)
# In production, specify exact origins instead of "*"
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://127.0.0.1:3000
CORS_ALLOW_CREDENTIALS=true

# ==================== AI PROCESSING SETTINGS ====================
# Device for AI models (cuda or cpu)
# Leave empty for auto-detection
DEVICE=

# Batch size for processing
BATCH_SIZE=8

# Maximum sequence length for summarization
MAX_SUMMARY_LENGTH=200
MIN_SUMMARY_LENGTH=50

# Number of top results for history retrieval
DEFAULT_RETRIEVAL_LIMIT=10

# ==================== CACHE SETTINGS ====================
# Model cache directory (HuggingFace models)
TRANSFORMERS_CACHE=./cache/transformers
HF_HOME=./cache/huggingface

# ==================== RATE LIMITING ====================
# API rate limiting (requests per minute)
RATE_LIMIT_PER_MINUTE=60

# ==================== SECURITY ====================
# Enable HTTPS redirect (production only)
HTTPS_REDIRECT=False

# Session timeout (in minutes)
SESSION_TIMEOUT=30

# ==================== OPTIONAL SERVICES ====================
# Email Configuration (for notifications - optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=

# Sentry for error tracking (optional)
SENTRY_DSN=

# Redis for caching (optional)
REDIS_URL=redis://localhost:6379/0

# ==================== DEVELOPMENT SETTINGS ====================
# Reload server on code changes (development only)
RELOAD=True

# Enable API documentation
ENABLE_DOCS=True

# Show detailed error messages
SHOW_ERROR_DETAILS=True
